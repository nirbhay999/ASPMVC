@model IEnumerable<CGITrainingDemo.Models.Asset>

@{
    ViewData["Title"] = "View all assets";
}

<h1>ListAssets</h1>
@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
               Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>Tag Number</th>
           <th>
               Actions
           </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
              @item.Name
            </td>
            <td>
                @item.Description
            </td>
           <td>
               @item.TagNumber
           </td>
            <td>
          
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
